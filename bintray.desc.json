{
    "package": {
        "name": "org.eclipse.oomph",
        "repo": "generic",
        "subject": "peterkir",
        "desc": "generated and pushed from TravisCI",
        "github_use_tag_release_notes": true,
        "github_release_notes_file": "RELEASE.txt",
        "licenses": ["EPL-1.0"],
        "labels": [""],
        "public_download_numbers": true,
        "public_stats": true,
        "attributes": [
           {"name": "TRAVIS_BRANCH"      , "values" : ["$TRAVIS_BRANCH"]       , "type": "string"},
           {"name": "TRAVIS_JOB_NUMBER"  , "values" : ["$TRAVIS_JOB_NUMBER"]   , "type": "number"},
           {"name": "TRAVIS_BUILD_ID"    , "values" : ["$TRAVIS_BUILD_ID"]     , "type": "string"},
           {"name": "TRAVIS_BUILD_NUMBER", "values" : ["$TRAVIS_BUILD_NUMBER"] , "type": "string"},
           {"name": "TRAVIS_COMMIT"      , "values" : ["$TRAVIS_COMMIT"]       , "type": "string"}
        ]
	},

    "version": {
        "name": "1.3.0.$DATE",
        "desc": "initial version",
        "released": "$DATE",
        "vcs_tag": "$TRAVIS_COMMIT"
    },

    "files":
        [
           { "includePattern": "products/org.eclipse.oomph.setup.installer.product/target/products/(.*\.zip)"   , "uploadPattern": "$TRAVIS_BUILD_NUMBER/products/$1" },
           { "includePattern": "products/org.eclipse.oomph.setup.installer.product/target/repository/(.*\.?.*)" , "uploadPattern": "$TRAVIS_BUILD_NUMBER/p2/installer/$1" },
           { "includePattern": "sites/org.eclipse.oomph.site/target/repository/(.*\.?.*)"                       , "uploadPattern": "$TRAVIS_BUILD_NUMBER/p2/oomph/$1" }
        ],
    "publish": true
}
